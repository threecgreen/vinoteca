{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Server",
            "type": "shell",
            "command": "${workspaceRoot}/scripts/run.sh",
            "args": [
                "--no-tab"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Pylint",
            "type": "shell",
            "command": "${workspaceRoot}/scripts/lint.sh",
            "args": [
                "python"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "Tslint",
            "type": "shell",
            "command": "${workspaceRoot}/scripts/lint.sh",
            "args": [
                "typescript"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "label": "Pytest",
            "type": "shell",
            "command": "${workspaceRoot}/scripts/test.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false
            }
        },
        {
            "type": "npm",
            "script": "watch",
            "path": "vinoteca/",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                "$ts-webpack-watch",
                "$tslint-webpack-watch"
            ]
        },
        {
            "type": "npm",
            "script": "install",
            "path": "vinoteca/",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build",
            "path": "vinoteca/",
            "problemMatcher": [
                "$ts-webpack",
                "$tslint-webpack"
            ]
        },
        {
            "type": "npm",
            "script": "profile",
            "path": "vinoteca/",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "analyze-bundle",
            "path": "vinoteca/",
            "problemMatcher": []
        }
    ],
}