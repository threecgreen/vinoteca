{
    "editor.codeActionsOnSave": {
        "source.fixAll.tslint": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*cache": true,
        "**/.coverage": true,
        ".coveragerc": false,
        "tags": true,
    },
    "typescript.format.enable": true,
    "typescript.suggest.completeFunctionCalls": true,
    "tslint.configFile": "tslint.json",
    "tslint.alwaysShowRuleFailuresAsWarnings": true,
}
