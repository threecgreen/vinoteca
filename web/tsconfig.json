{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedParameters": true,
        "strict": true,
        "jsx": "react",
        "downlevelIteration": true  // ES6-style generators
    },
    "include": [
        "front_end",
        "lib",
        "components",
        "node_modules/@types",
    ],
}
